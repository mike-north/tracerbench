{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
      "baseUrl": ".",
      "paths": { "*": ["types/*"] },
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "newLine": "LF",

    "moduleResolution": "node",
    "module": "commonjs",
    "resolveJsonModule": true,
    "target": "es2017",
    "outDir": "./dist"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "test"
  ],
}